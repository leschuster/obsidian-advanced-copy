{
    "name": "obsidian-advanced-copy",
    "version": "0.8.1",
    "description": "An [Obsidian](https://obsidian.md) to copy Markdown and transform it into HTML, Anki, or any custom format. Create custom profiles with versatile templates tailored to your workflow.",
    "main": "main.js",
    "scripts": {
        "dev": "node esbuild.config.mjs",
        "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
        "version": "node version-bump.mjs && git add manifest.json versions.json",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
        "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --watch",
        "prettier:check": "prettier . --check",
        "prettier:write": "prettier . --write",
        "prepare": "husky"
    },
    "keywords": [
        "obsidian",
        "obsidian-plugin",
        "markdown",
        "transform"
    ],
    "author": "leschuster",
    "license": "MIT",
    "devDependencies": {
        "@types/he": "^1.2.3",
        "@types/jest": "^29.5.14",
        "@types/mdast": "^4.0.4",
        "@types/node": "^22.13.14",
        "@typescript-eslint/eslint-plugin": "8.28.0",
        "@typescript-eslint/parser": "8.28.0",
        "builtin-modules": "5.0.0",
        "esbuild": "0.25.1",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jsdom": "^26.0.0",
        "lint-staged": "^15.5.0",
        "mdast-util-gfm": "^3.1.0",
        "mdast-util-math": "^3.0.0",
        "obsidian": "latest",
        "prettier": "^3.5.3",
        "ts-jest": "^29.3.0",
        "ts-node": "^10.9.2",
        "tslib": "2.8.1",
        "typescript": "5.8.2"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "dependencies": {
        "he": "^1.2.0",
        "mdast-util-find-and-replace": "^3.0.2",
        "rehype-stringify": "^10.0.1",
        "remark-gemoji": "^8.0.0",
        "remark-gfm": "^4.0.1",
        "remark-math": "^6.0.0",
        "remark-parse": "^11.0.0",
        "remark-rehype": "^11.1.1",
        "unified": "^11.0.5",
        "unist-util-find-after": "^5.0.0",
        "unist-util-find-between-all": "^1.0.5",
        "unist-util-visit": "^5.0.0",
        "vfile": "^6.0.3",
        "zwitch": "^2.0.4"
    }
}
