{
    "compilerOptions": {
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "ES2018",
        "allowJs": true,
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "lib": ["DOM", "ES5", "ES6", "ES7", "ES2021.String"]
    },
    "include": ["**/*.ts"]
}
